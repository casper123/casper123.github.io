<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<widget id="com.noyogo.deal" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>ShaiShai</name>
  <description>
    Deal sharing app from Noyogo.
  </description>
  <author email="team@noyogo.com" href="http://noyogo.com/">
    Noyogo Team
  </author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="webviewbounce" value="false" />
  <preference name="UIWebViewBounce" value="false" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="BackupWebStorage" value="none" />
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true" />
  </feature>
  <platform name="android">
    <icon src="www/res/icons/android/appIcon.png" density="ldpi" />
    <icon src="www/res/icons/android/appIconIphone@2x.png" density="mdpi" />
    <icon src="www/res/icons/android/appIconIpad@2x.png" density="hdpi" />
    <icon src="www/res/icons/android/appIcon@3x.png" density="xhdpi" />
  </platform>
  <platform name="ios">
    <icon src="www/res/icons/ios/icon-60.png" width="60" height="60" />
    <icon src="www/res/icons/ios/icon-60@2x.png" width="120" height="120" />
    <icon src="www/res/icons/ios/icon-76.png" width="76" height="76" />
    <icon src="www/res/icons/ios/icon-76@2x.png" width="152" height="152" />
    <icon src="www/res/icons/ios/icon.png" width="57" height="57" />
    <icon src="www/res/icons/ios/icon@2x.png" width="114" height="114" />
    <icon src="www/res/icons/ios/icon-72.png" width="72" height="72" />
    <icon src="www/res/icons/ios/icon-72@2x.png" width="144" height="144" />
  </platform>
  <platform name="android">
    <splash src="www/res/screens/splash.png" density="port-hdpi" />
    <splash src="www/res/screens/splash.png" density="port-ldpi" />
    <splash src="www/res/screens/splash.png" density="port-mdpi" />
    <splash src="www/res/screens/splash.png" density="port-xhdpi" />
  </platform>

  <platform name="ios">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="www/res/screens/splash.png" width="640" height="1136" />
  </platform>
  <preference name="SplashScreenDelay" value="5000" />
</widget>
